---
layout: blog
---

<h1>
    {{ title}}
</h1>

<div>
    <em><time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time></em> &middot; 
    <span>Время чтения ≈ {{ content | readTime }} мин.</span>
</div>

<div>
  {{ content }}
{% include "likely.liquid" %}
</div>
<div class="mt-3 pb-4 text-xs" style="color:#999">
	{% for tag in tags %}
	  {% if tag != "posts" %}
		<a class="link-novisited px-3 py-2" href="/tags/{{ tag | slug }}">
		  <span>{{ tag }}</span>
		</a>
	  {% endif %}
	{% endfor %}
	</div>
	<!-- # ===== Previous and Next =====  #-->
	{%- if collections.posts %}
	{% assign previousPost = collections.posts | getPreviousCollectionItem: page %}
	{% assign nextPost = collections.posts | getNextCollectionItem: page %}
	{%- if nextPost or previousPost %}
	<hr>
	<div class="post-footer">
	  <div class="text-sm">{%- if previousPost %}← <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>{% endif %}</div>
	  <div class="text-sm">{%- if nextPost %}<a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a> → {% endif %}</div>
	</div>
	{%- endif %}
	{%- endif %}
  {% include "comments.liquid" %}
