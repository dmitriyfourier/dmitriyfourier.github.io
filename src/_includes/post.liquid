---
layout: blog
---
<article class="article-post">
<h1 class="mb-4">
    {{ title}}
</h1>
<div class="mb-4 text-mk-comments">
    <em><time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time></em> •
    <span class=>Время чтения ≈ {{ content | readTime }} мин.</span>
</div>
<div>
  {{ content }}

</div>
</article>
<!-- # ===== Tags =====  # -->
<div class="warp flex mt-3 pb-4 text-xs">
	{% for tag in tags %}
	  {% if tag != "posts" %}
		<a class="link-novisited px-3 py-2" href="/tags/{{ tag | slug }}">
		  <span>{{ tag }}</span>
		</a>
	  {% endif %}
	{% endfor %}
	</div>
	<!-- # ===== Previous and Next =====  #-->
	{%- if collections.posts %}
	{% assign previousPost = collections.posts | getPreviousCollectionItem: page %}
	{% assign nextPost = collections.posts | getNextCollectionItem: page %}
	{%- if nextPost or previousPost %}
	<hr>
	<div class="flex flex-row justify-between">
	  <div class="basis-1/2 justify-self-start">{%- if previousPost %}← <a href="{{ previousPost.url | url }}" class="link-novisited">{{ previousPost.data.title }}</a>{% endif %}</div>
	  <div class="basis-1/2 justify-self-end">{%- if nextPost %}<a href="{{ nextPost.url | url }}" class="link-novisited">{{ nextPost.data.title }}</a> → {% endif %}</div>
	</div>
	{%- endif %}
	{%- endif %}
  {% include "_partials/comments.liquid" %}